
@using Volo.Abp.DependencyInjection;
@using We.Bootswatch.Components.Web.BasicTheme;
@typeparam TProvider
@typeparam TItem


@inject IAbpLazyServiceProvider Service
@if (Current!=null && Others != null && Others.Any())
{
    <BarDropdown RightAligned="true">
        <BarDropdownToggle>
            @Current.Name
        </BarDropdownToggle>
        <BarDropdownMenu>
            @foreach (var item in Others)
            {
            <BarDropdownItem Clicked="()=>OnSelectorClicked(item)">@item.Name</BarDropdownItem>
        }
        </BarDropdownMenu>
    </BarDropdown>
}
