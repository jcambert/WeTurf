<Column ColumnSize="ColumnSize.Is8" Class="course-card-description ms-2">
    @if(!string.IsNullOrEmpty(Description1)){
    <Row>
        <h3 aria-level="3" dir="auto" role="heading">@Description1</h3>
    </Row>
    }
    @if(!string.IsNullOrEmpty(Description2)){
        <Row>
            <h3 aria-level="3" dir="auto" role="heading">@Description2</h3>

        </Row>

    }
</Column>

@code {
    [Parameter] public string Description1 { get; set; }
    [Parameter] public string Description2 { get; set; }
}
